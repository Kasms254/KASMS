# Frontend environment variables for the Vite app
# Do NOT store secrets or private keys here in a public repo.

# Base URL for your backend API (leave empty while waiting for the real API)
# IMPORTANT: Must use 'localhost' (not '127.0.0.1') so both frontend and backend
# share the same "site" for SameSite=Lax cookie enforcement.
VITE_API_BASE=http://localhost:8000
VITE_API_FALLBACK=http://192.168.2.254:8080

# When true, enables a local dev auth bypass so you can continue UI work before the backend is available.
# IMPORTANT: Never enable this in production.
VITE_ENABLE_DEV_AUTH=false
# VITE_API_URL=https://kasms.onrender.com
VITE_API_URL=http://localhost:8000
# Example usage in code: import.meta.env.VITE_API_BASE_URL

# Title Case Transformation
# Automatically transforms all text to Title Case (Every Word Capitalized)
# Applies to all API responses and can be used throughout the frontend
# Set to 'false' to disable (default: true)
VITE_SENTENCE_CASE_ENABLED=true
